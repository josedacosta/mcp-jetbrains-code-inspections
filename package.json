{
    "name": "mcp-jetbrains-code-inspections",
    "version": "1.0.0",
    "description": "MCP server for JetBrains IDE code inspections with automatic IDE selection",
    "author": "José DA COSTA <jose.da-costa@runtima.com>",
    "license": "OSL-3.0",
    "copyright": "OSL-3.0 © Runtima",
    "organization": {
        "name": "Runtima",
        "email": "contact@runtima.com"
    },
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "//DEVELOPMENT": "",
        "dev": "tsx src/index.ts",
        "start": "node dist/index.js",
        "//MCP": "",
        "inspect": "npx @modelcontextprotocol/inspector node dist/index.js",
        "inspect:dev": "npx @modelcontextprotocol/inspector npx tsx src/index.ts",
        "inspect:watch": "yarn build:watch & npx @modelcontextprotocol/inspector node dist/index.js",
        "//TEST": "",
        "test": "echo 'Tests not yet configured'",
        "test:mcp": "tsx scripts/testing/test-mcp-interactive.ts",
        "//QUALITY": "",
        "lint": "yarn eslint:check && yarn prettier:check",
        "format": "yarn prettier:format && yarn eslint:fix",
        "typecheck": "yarn typescript:check",
        "//TYPE CHECKING": "",
        "typescript:check": "tsc --noEmit",
        "typescript:check:scripts": "tsc --project tsconfig.scripts.json --noEmit",
        "//BUILD": "",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "clean": "rm -rf dist .docusaurus .docs-build",
        "//PRETTIER": "",
        "prettier:check": "prettier --check .",
        "prettier:format": "prettier --write .",
        "//ESLINT": "",
        "eslint:check": "eslint src --ext .ts,.tsx",
        "eslint:fix": "eslint src --ext .ts,.tsx --fix",
        "//VERSION": "",
        "version:check": "tsx scripts/version/check-version-consistency.ts",
        "//DOCUMENTATION": "",
        "docs:start": "./scripts/docs/dev-with-node-20.sh",
        "docs:dev:watch": "./scripts/docs/dev-with-node-20.sh",
        "docs:build": "./scripts/docs/build-with-node-20.sh",
        "docs:serve": "docusaurus serve --dir .docs-build/build",
        "docs:clear": "docusaurus clear",
        "docs:preview": "./scripts/docs/build-with-node-20.sh && yarn docs:serve"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.17.4",
        "@types/glob": "^9.0.0",
        "glob": "^11.0.3",
        "zod": "^3.22.0"
    },
    "devDependencies": {
        "@docusaurus/core": "^3.8.1",
        "@docusaurus/preset-classic": "^3.8.1",
        "@mdx-js/react": "^3.1.0",
        "@types/node": "^20.0.0",
        "@types/react": "^19.1.9",
        "@typescript-eslint/eslint-plugin": "^8.39.0",
        "@typescript-eslint/parser": "^8.39.0",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.3",
        "prettier": "^3.6.2",
        "prism-react-renderer": "^2.4.1",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "tsx": "^4.0.0",
        "typescript": "^5.0.0"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
